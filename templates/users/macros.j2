{% macro profilebutton(action, buttonclass, buttontext, method='POST', formclass="") -%}
    <form method="{{ method }}" action="{{ action }}" class="{{ formclass }}">
        <button class="{{ buttonclass }}">{{ buttontext}}</button>
    </form>
{%- endmacro%}

{% macro followbutton(id, following=False) -%}
    {% if following%}
        <form method="POST" action="/users/stop-following/{{ id }}">
            <button class="btn btn-primary btn-sm">Unfollow</button>
        </form>
    {% else%}
        <form method="POST" action="/users/follow/{{ id }}">
            <button class="btn btn-outline-primary btn-sm">Follow</button>
        </form>
    {% endif%}
{%- endmacro%}